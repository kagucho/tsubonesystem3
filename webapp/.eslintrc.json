{
	"extends": "eslint:all",
	"globals": {"m": false},
	"parserOptions": {"ecmaVersion": 7, "sourceType": "module"},
	"rules": {
		"arrow-parens":                ["warn", "as-needed"],
		"callback-return":             "off",
		"capitalized-comments":        "off",
		"class-methods-use-this":      [
			"warn", {"exceptMethods": ["controller"]}
		],
		"comma-dangle":                ["warn", "always-multiline"],
		"complexity":                  "off",
		"consistent-return":           "off",
		"eqeqeq":                      "off",
		"func-name-matching":          ["warn", "never"],
		"func-names":                  ["warn", "never"],
		"func-style":                  [
			"warn", "declaration", {"allowArrowFunctions": true}
		],
		"global-require":              "off",
		"id-length":                   "off",
		"indent":                      ["warn", "tab"],
		"init-declarations":           "off",
		"key-spacing":                 ["warn", {"align": "value"}],
		"lines-around-comment":        "off",
		"max-len":                     "off",
		"max-lines":                   "off",
		"max-params":                  "off",
		"max-statements":              "off",
		"multiline-ternary":           "off",
		"new-cap":                     [
			"warn", {
				"capIsNewExceptionPattern": "^\\$\\.",
				"newIsCapExceptions": ["controller"]
			}
		],
		"new-parens":                  "off",
		"newline-after-var":           "off",
		"newline-per-chained-call":    "off",
		"no-confusing-arrow":          "off",
		"no-eq-null":                  "off",
		"no-extra-parens":             "off",
		"no-invalid-this":             "off",
		"no-empty-function":           "off",
		"no-lonely-if":                "off",
		"no-loop-func":                "off",
		"no-magic-numbers":            "off",
		"no-mixed-operators":          "off",
		"no-mixed-spaces-and-tabs":    "off",
		"no-nested-ternary":           "off",
		"no-plusplus":                 "off",
		"no-process-env":              "off",
		"no-restricted-syntax":        ["warn", "WithStatement"],
		"no-tabs":                     "off",
		"no-ternary":                  "off",
		"no-undefined":                "off",
		"no-void":                     "off",
		"object-curly-newline":        "off",
		"object-property-newline":     "off",
		"one-var":                     ["warn", "never"],
		"operator-linebreak":          [
			"warn", "after",
			{"overrides": {"?": "after", ":": "after"}}
		],
		"padded-blocks":               ["warn", "never"],
		"prefer-rest-params":          "off",
		"prefer-template":             "off",
		"quote-props":                 "off",
		"require-jsdoc":               "off",
		"sort-keys":                   "off",
		"space-before-function-paren": ["warn", "never"],
		"space-infix-ops":             "off",
		"space-unary-ops":             ["warn", {"words": true}],
		"valid-jsdoc":                 "off",
		"yield-star-spacing":          [
			"warn", {"before": true, "after": false}
		]
	}
}
